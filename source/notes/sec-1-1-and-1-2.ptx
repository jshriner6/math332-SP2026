    <page>

        <exercise workspace="1in">
            <title>Example: General Solutions to First-Order PDEs with constant coefficients</title>
            <introduction>
                <p>
                    Find the general solution to 
					<md>
						3u_x - 2u_y + u =x
					</md>.
					
                </p>
            </introduction>
			<task workspace="0.5in">
				<statement>
					<p>
						Identify the values of <m>a, b, c, f(x,y)</m>.
					</p>
				</statement>
			</task>

			<task workspace="0.5in">
				<statement>
					<p>
						Re-write the PDE under the transformation <m>w=bx-ay</m>, <m>z=y</m>.
					</p>
				</statement>
			</task>
			
			<task workspace="0.5in">
				<statement>
					<p>
						Identify the integrating factor <m>\mu</m> to be used to solve the previous PDE.
					</p>
				</statement>
			</task>

			<task workspace="1in">
				<statement>
					<p>
						Write down a version of the solution <m>v(w,z)</m> containing an integral.
					</p>
				</statement>
			</task>

			<task workspace="1in">
				<statement>
					<p>
						Solve the integral <md>
							\frac{1}{4}\int (w + 3z)e^{\frac{-z}{2}} \quad dz
						</md>.
						
					</p>
				</statement>
			</task>
            
			<task workspace="0.5in">
				<statement>
					<p>
						Write down a version of the solution <m>v(w,z)</m> containing no integrals.
					</p>
				</statement>
			</task>

			<task workspace="0.5in">
				<statement>
					<p>
						Write down the solution <m>u(x,y)</m>.
					</p>
				</statement>
			</task>
            
        </exercise>

        
